@model Certification.Domain.Entities.WorkshopParticipant

@{
    Layout = null; // Explicitly set to null for this view
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>الشهادة</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>

    <!-- Favicons -->
    <link rel="icon" href="@Url.Content("~/Content/assets/images/logo.jpg")" type="image/jpeg" />

    <link rel="stylesheet" href="@Url.Content("~/Content/assets/css/bootstrap.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/assets/css/responsive.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/new_main.css")" />
</head>
<body style="background-color:#fff; height:800px;">
    <!-- Container start -->
    <div class="container">
        <div class="main-container">
            <div class="content-wrapper">
                <div class="row gutters">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                        <div class="card text-center">
                            @if (Model != null)
                            {
                                @if (Model.Course != null)
                                {
                                    <img style="width:100%;" id="imageContent" src="@Url.Content($"~/Attachments/{Model.Course.CertificationImage}.jpg")" class="card-img" alt="Certification Image" width="720" height="800" />
                                    <div class="card-img-overlay">
                                        <div class="card-body" style="padding-right: 0px; padding-left: 100px; margin-top:26%; margin-right: -103px;">
                                            <h6 class="c-title">
                                                <span style="color:#016241">@Model.Name</span>
                                            </h6>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <p>No course information available.</p>
                                }
                            }
                            else
                            {
                                <p>No certification data available.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JS Files -->
    <script src="@Url.Content("~/Content/assets/js/jquery-3.2.1.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/bootstrap/popper.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/script.js")"></script>
</body>
</html>
